#:kivy 2.2.1
#:import utils kivy.utils

<MainWidget>:
    orientation: "vertical"
    padding: dp(8)
    spacing: dp(8)
    canvas.before:
        Color:
            rgb: utils.get_color_from_hex('#1e1e2d')
        Rectangle:
            pos: self.pos
            size: self.size

    # Chat Log Section
    ScrollView:
        id: chat_log_scroll
        size_hint_y: 1
        GridLayout:
            id: chat_log
            cols: 1
            size_hint_y: None
            height: self.minimum_height
            spacing: dp(8)
            padding: dp(8)
            row_default_height: dp(50)
            row_force_default: True

    # Input Section
    BoxLayout:
        orientation: "vertical"
        size_hint_y: None
        height: dp(160)
        spacing: dp(8)
        padding: dp(8)
        canvas.before:
            Color:
                rgb: utils.get_color_from_hex('#2c2c3e')
            RoundedRectangle:
                pos: self.pos
                size: self.size
                radius: [dp(10)]

        Label:
            text: "üí≠ Nachricht an KI-System:"
            font_size: sp(14)
            color: 0.9, 0.9, 0.9, 1
            size_hint_y: None
            height: dp(25)
            halign: "left"
            text_size: self.size

        TextInput:
            hint_text: "Schreibe hier deine Nachricht... (optimiert f√ºr S25 Tastatur)"
            multiline: True
            background_color: 0.15, 0.15, 0.2, 1
            foreground_color: 1, 1, 1, 1
            cursor_color: 0.3, 0.7, 1, 1
            font_size: sp(16)
            size_hint_y: None
            height: dp(100)
            padding: [10, 10]

        # Control Buttons Row
        BoxLayout:
            orientation: "horizontal"
            size_hint_y: None
            height: dp(50)
            spacing: dp(8)

            Button:
                text: "üì§ Senden"
                background_color: 0.2, 0.6, 0.8, 1
                color: 1, 1, 1, 1
                font_size: sp(14)
                size_hint_x: 0.5
                on_release: app.root.send_message(self.parent.parent.children[1].text) # This is a placeholder for the send logic

            Button:
                text: "üìã Kopieren"
                background_color: 0.2, 0.2, 0.3, 1
                color: 1, 1, 1, 1
                font_size: sp(14)
                size_hint_x: 0.25
            
            Button:
                text: "üóëÔ∏è L√∂schen"
                background_color: 0.8, 0.2, 0.2, 1
                color: 1, 1, 1, 1
                font_size: sp(14)
                size_hint_x: 0.25
